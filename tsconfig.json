{
  "include": ["src"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "target": "es2017",
    "incremental": true,
    "noEmit": true,
    "module": "esnext",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "node",
    "types": ["node"],
    "outDir": "dist"
  }
}
